<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Map_View"
    android:background="@color/black">
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="60dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F4A73A">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_drag_handle_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
            <androidx.constraintlayout.motion.widget.MotionLayout
                app:layoutDescription="@xml/map_drap_up"
                android:layout_marginTop="10dp"
                android:id="@+id/section_top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/section_bottom"
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/driver_profile_picture_placeholder"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F4A73A">
                        <ImageView
                            android:id="@+id/driver_profile_picture"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/driver_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NGABERS"
                    android:textSize="20dp"
                    android:fontFamily="@font/inter_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="80dp"/>
                <TextView
                    android:id="@+id/passenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Orang"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_light_beta"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="40dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/places"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/driver_username">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="20dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#F4A73A">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:src="@drawable/baseline_my_location_24"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/Lokasi_Jemput_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lokasi Jemput"
                        android:textSize="13dp"
                        android:fontFamily="@font/inter_regular"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="70dp"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/pickup_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IDN Boarding School"
                        android:textSize="17dp"
                        android:fontFamily="@font/inter_bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="45dp"
                        android:layout_marginStart="70dp"/>
                    <ImageView
                        android:id="@+id/line"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleX="1.1"
                        android:src="@drawable/line"
                        app:layout_constraintTop_toBottomOf="@id/pickup_location"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="40dp"
                        app:layout_constraintTop_toBottomOf="@id/line"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#F4A73A">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:src="@drawable/baseline_location_pickup_24"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lokasi Tujuan"
                        android:textSize="13dp"
                        android:fontFamily="@font/inter_regular"
                        app:layout_constraintTop_toBottomOf="@id/line"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="70dp"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alun-alun Jonggol"
                        android:textSize="17dp"
                        android:fontFamily="@font/inter_bold"
                        app:layout_constraintTop_toBottomOf="@id/line"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="70dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/header_rincian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rincian"
                    android:fontFamily="@font/inter_bold"
                    app:layout_constraintTop_toBottomOf="@id/places"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="30dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/details_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@id/header_rincian"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="30dp">
                    <TextView
                        android:id="@+id/distance_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="13sp"

                        android:fontFamily="@font/inter_regular"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="4dp"
                        android:text="Jarak"/>
                    <TextView
                        android:id="@+id/price_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:fontFamily="@font/inter_regular"
                        app:layout_constraintTop_toBottomOf="@id/distance_header"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="3dp"
                        android:text="Biaya Perjalanan"/>
                    <TextView
                        android:id="@+id/tax_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:fontFamily="@font/inter_regular"
                        app:layout_constraintTop_toBottomOf="@id/price_header"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="3dp"
                        android:text="Biaya Jasa Aplikasi"/>
                    <TextView
                        android:id="@+id/total_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:fontFamily="@font/inter_regular"
                        app:layout_constraintTop_toBottomOf="@id/tax_header"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="10dp"
                        android:text="Total"/>
                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="13sp"

                        android:fontFamily="@font/inter_regular"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="4dp"
                        android:text="100 km"/>
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:fontFamily="@font/inter_regular"
                        app:layout_constraintTop_toBottomOf="@id/distance_header"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="3dp"
                        android:text="Rp 32.000"/>
                    <TextView
                        android:id="@+id/tv_tax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:fontFamily="@font/inter_regular"
                        app:layout_constraintTop_toBottomOf="@id/price_header"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="3dp"
                        android:text="Rp 2.000"/>
                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:fontFamily="@font/inter_regular"
                        app:layout_constraintTop_toBottomOf="@id/tax_header"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="10dp"
                        android:text="Rp 34.000"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.motion.widget.MotionLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="#F3A12D"
                android:id="@+id/section_bottom"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/wallet"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NGALET"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="25dp"/>
                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 10.000"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="25dp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_orange"
                    android:text="PESAN NGABERS"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>