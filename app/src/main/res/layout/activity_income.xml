<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityIncome">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#F3A12D"/>
    <ImageButton
        android:background="#F3A12D"
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Income"
        android:textSize="40sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_extrabold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, user"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/placeholder_balance"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome"
        android:layout_marginTop="20dp"
        android:background="@drawable/income_card_backgorund">
        <TextView
            android:id="@+id/header_total_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Balance"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_semibold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="17sp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 1.000.000"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_bold"
            app:layout_constraintTop_toBottomOf="@id/header_total_balance"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="40sp"
            android:layout_marginStart="10dp"/>
        <ImageView
            android:id="@+id/ic_income"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/baseline_arrow_income_24"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/header_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/ic_income"
            app:layout_constraintStart_toEndOf="@id/ic_income"
            android:text="Income"
            android:layout_marginTop="-7dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/inter_medium"
            android:textColor="#ECD9BE"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/header_income"
            app:layout_constraintStart_toEndOf="@id/ic_income"
            android:text="Rp 900.000"
            android:layout_marginTop="-5dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/ic_expences"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/expences"
            android:src="@drawable/baseline_arrow_expenses_24"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/header_expences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/ic_income"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Expences"
            android:layout_marginTop="-7dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/inter_medium"
            android:textColor="#ECD9BE"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/expences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/header_expences"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Rp 320.000"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="10dp"
            android:gravity="right"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/header_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History Transaction"
        app:layout_constraintTop_toBottomOf="@id/placeholder_balance"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/black"
        android:textSize="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerViewHistory"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        app:layout_constraintTop_toBottomOf="@id/header_history"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>