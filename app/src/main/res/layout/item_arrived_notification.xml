<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="50dp"
    app:cardCornerRadius="20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@id/tv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Kamu Sudah Sampai"
            android:fontFamily="@font/inter_extrabold"
            android:textColor="#F2B35A"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tv_subheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Terima Kasih"
            android:fontFamily="@font/inter_semibold"
            android:textColor="#F2B35A"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="55dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_subheader"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#F2B35A">

        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/exit_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/mapView"
            android:text="Back To Menu"
            android:textSize="20dp"
            android:background="@drawable/back_to_menu_background" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>