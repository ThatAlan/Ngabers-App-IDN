<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginHorizontal="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/transaction_background"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transaction_background">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/card_pay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/transition_detail"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Top Up Ngalet"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toTopOf="@id/icon"
                app:layout_constraintStart_toEndOf="@id/icon"/>
            <TextView
                android:id="@+id/transition_date"
                android:layout_width="170dp"
                android:layout_height="23dp"
                android:text="20 mei 1999"
                android:fontFamily="@font/inter_light_beta"
                android:textColor="#6C6C6C"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/icon"
                app:layout_constraintStart_toEndOf="@id/icon"/>
            <TextView
                android:id="@+id/transition_nominal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="+ Rp 50jt"
                android:fontFamily="@font/inter_medium"
                android:textColor="#00FF57"
                android:textSize="16sp"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toTopOf="@id/icon"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/transition_nominal_status"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="Top Up"
                android:fontFamily="@font/inter_light_beta"
                android:textColor="#6C6C6C"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/icon"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
