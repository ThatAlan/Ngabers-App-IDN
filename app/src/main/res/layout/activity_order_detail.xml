<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityOrderDetail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/placeholder_location"
                app:cardCornerRadius="20dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_orange_stroke"
                android:layout_marginHorizontal="20dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_orange_stroke">
                    <TextView
                        android:id="@+id/header_pickup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="20dp"
                        android:textColor="#F4A73A"
                        android:fontFamily="@font/inter_bold"/>
                    <TextView
                        android:id="@+id/pickup_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your current location"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@id/header_pickup"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#F4A73A"
                        android:fontFamily="@font/inter_bold"/>
                    <View
                        android:id="@+id/line_1"
                        android:layout_width="285dp"
                        android:layout_height="1.5dp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintEnd_toStartOf="@id/line_2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="#F4A73A"/>
                    <TextView
                        android:id="@+id/header_dropoff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drop off"
                        app:layout_constraintTop_toBottomOf="@id/line_1"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="20dp"
                        android:textColor="#F4A73A"
                        android:fontFamily="@font/inter_bold"/>
                    <TextView
                        android:id="@+id/dropoff_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rumah Abrojol"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@id/header_dropoff"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#F4A73A"
                        android:fontFamily="@font/inter_bold"/>
                    <View
                        android:id="@+id/line_2"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="50dp"
                        app:layout_constraintTop_toBottomOf="@id/pickup_location"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="#F4A73A"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="4dp"
                        app:cardElevation="0dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_orange_stroke">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@drawable/baseline_location_on_24"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/yellow_line"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="7dp"
                        android:layout_marginEnd="4dp"
                        app:cardElevation="0dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_orange_stroke">
                            <ImageView
                                android:layout_width="19dp"
                                android:layout_height="19dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@drawable/baseline_my_location_24_ylw"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/placeholder_location"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/black"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:layout_constraintTop_toBottomOf="@id/mapView"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#F7C175"
                app:cardCornerRadius="30dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="#F7C175"
                        app:cardElevation="0dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_white_stroke">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/profile_1_placeholder"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mamank Racing"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="15dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginStart="90dp"
                                    android:fontFamily="@font/inter_semibold"
                                    android:textSize="25sp"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/role"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Driver"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginBottom="4dp"
                                    android:layout_marginStart="90dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:fontFamily="@font/inter_regular"
                                    android:textSize="20sp"/>
                                <androidx.cardview.widget.CardView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_marginStart="20dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:cardCornerRadius="100dp">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/profile_picture"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/profile"/>
                                </androidx.cardview.widget.CardView>
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:src="@drawable/baseline_star_rate_2_24"
                                    android:layout_marginEnd="30dp"
                                    android:layout_marginBottom="2dp"/>
                                <TextView
                                    android:id="@+id/driver_rate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_marginEnd="3dp"
                                    android:textColor="@color/black"
                                    android:text="8.9"
                                    android:textSize="17sp"
                                    android:fontFamily="@font/inter_regular"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/white"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/profile_2_placeholder"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/vehicle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Moto GP"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="17dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginStart="90dp"
                                    android:fontFamily="@font/inter_semibold"
                                    android:textSize="20sp"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Racing Motor"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginBottom="4dp"
                                    android:layout_marginStart="90dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:fontFamily="@font/inter_regular"
                                    android:textSize="17sp"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/License_plate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="B 3124 k"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="18dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginStart="90dp"
                                    android:fontFamily="@font/inter_semibold"
                                    android:textSize="17sp"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="License Place No"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginBottom="4dp"
                                    android:layout_marginStart="90dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:fontFamily="@font/inter_regular"
                                    android:textSize="15sp"/>
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/icon"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_marginStart="20dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:src="@drawable/motorcycle_black"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="#F3A12D"
                        android:clickable="true">
                        <ImageView
                            android:layout_margin="10dp"
                            android:id="@+id/call_btn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/baseline_phone_24"/>
                    </androidx.cardview.widget.CardView>
                    <EditText
                        android:id="@+id/message"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="80dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/rounded_white"
                        android:textColor="@color/black"
                        android:hint="Send a message"/>
                    <ImageView
                        android:id="@+id/send_btn"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="@id/message"
                        app:layout_constraintEnd_toEndOf="@id/message"
                        app:layout_constraintBottom_toBottomOf="@id/message"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/baseline_send_24"
                        android:clickable="true"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#FAE1BD"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardElevation="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAE1BD">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver will arrive in"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:textSize="25sp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F4A73A"
            android:background="@drawable/driver_estimation_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="5dp"
            android:layout_marginEnd="15dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/driver_estimation_background">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/baseline_access_time_filled_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/estimation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- Minutes"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_marginStart="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>